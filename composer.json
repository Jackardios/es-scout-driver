{
    "name": "jackardios/es-scout-driver",
    "description": "Advanced Elasticsearch driver for Laravel Scout with full Query DSL support",
    "keywords": [
        "laravel",
        "scout",
        "elasticsearch",
        "elastic",
        "search",
        "driver",
        "engine",
        "query-dsl",
        "full-text-search",
        "aggregations",
        "php"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Salavat Salakhutdinov",
            "email": "salahutdinov.salavat@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Jackardios\\EsScoutDriver\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jackardios\\EsScoutDriver\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.1",
        "elasticsearch/elasticsearch": "^8.0 || ^9.0",
        "laravel/scout": "^10.0 || ^11.0 || ^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5 || ^11.0",
        "orchestra/testbench": "^8.0 || ^9.0 || ^10.0",
        "phpstan/phpstan": "^1.10 || ^2.0",
        "friendsofphp/php-cs-fixer": "^3.14"
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=unit",
        "test:integration": "phpunit --testsuite=integration",
        "analyse": "phpstan analyse --memory-limit=512M",
        "format-check": "php-cs-fixer fix --dry-run --diff",
        "format": "php-cs-fixer fix"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jackardios\\EsScoutDriver\\ServiceProvider"
            ]
        }
    }
}
